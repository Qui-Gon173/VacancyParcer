@model SelectList

@{
    ViewBag.Title = "Формирование отчета";
}
<div class="col-md-6">
    <h2>Формирование отчета</h2>
    <div class="panel panel-primary">
        <div class="panel-heading">
            Задайте настройки отчета
        </div>
        <div class="panel-body ">
            @using (Html.BeginForm())
            {
                @Html.Hidden("report",false);
                <div class="form-group">
                    @Html.Label("texCount", "Число технологий:")
                    @Html.TextBox("texCount", null, new { @class = "form-control", placeholder = "Введите число" })
                </div>
                <div class="form-group">
                    @Html.Label("tex", "Технология/ресурс:")
                    @Html.DropDownList("tex", Model, new { @class = "form-control", placeholder = "Выберите одно из доступных" })
                </div>
                <div class="form-group">
                    @Html.Label("cityCount", "Количество городов:")
                    @Html.TextBox("cityCount", null, new { @class = "form-control", placeholder = "Введите число" })
                </div>
                <button id="notReport" class="btn btn-lg btn-primary btn-block" type="submit">Составить</button>
                <button id="setReport" class="btn btn-lg btn-primary btn-block" type="submit">Скачать PDF</button>
            }
        </div>
    </div>
</div>
<script>
    $().ready(function () {
        $('#setReport').click(function () {
            $('#report').val(true);
        });
        $('#notReport').click(function () {
            $('#report').val(false);
        });
    });
</script>
